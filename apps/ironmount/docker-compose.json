{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "ironmount",
      "image": "ghcr.io/nicotsx/ironmount:v0.11.0",
      "isMain": true,
      "internalPort": 4096,
      "volumes": [
        {
          "hostPath": "/var/lib/ironmount/",
          "containerPath": "/var/lib/ironmount"
        },
        {
          "hostPath": "/etc/localtime",
          "containerPath": "/etc/localtime",
          "readOnly": true
        }
      ],
      "devices": ["/dev/fuse:/dev/fuse"],
      "capAdd": ["SYS_ADMIN"]
    }
  ]
}
