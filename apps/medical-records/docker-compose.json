{
  "schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "medical-records",
      "image": "ghcr.io/afairgiant/personal-medical-records-keeper/medical-records:v0.28.1",
      "isMain": true,
      "internalPort": 8000,
      "environment": {
        "PUID": "${MEDRECORDS_PUID-1000}",
        "PGID": "${MEDRECORDS_PGID-1000}",
        "DB_HOST": "medical-records-db",
        "DB_PORT": 5432,
        "DB_NAME": "medrecords",
        "DB_USER": "medapp",
        "DB_PASSWORD": "${MEDRECORDS_DB_PASSWORD}",
        "SECRET_KEY": "${MEDRECORDS_SECRET_KEY}",
        "TZ": "${TZ}",
        "LOG_LEVEL": "INFO"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/uploads",
          "containerPath": "/app/uploads"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/logs",
          "containerPath": "/app/logs"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/backups",
          "containerPath": "/app/backups"
        }
      ]
    },
    {
      "name": "medical-records-db",
      "image": "postgres:15.8-alpine",
      "environment": {
        "POSTGRES_DB": "medrecords",
        "POSTGRES_USER": "medapp",
        "POSTGRES_PASSWORD": "${MEDRECORDS_DB_PASSWORD}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ]
}