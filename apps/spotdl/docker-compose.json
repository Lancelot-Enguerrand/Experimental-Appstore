{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "spotdl",
      "image": "spotdl/spotify-downloader:v4.4.3",
      "isMain": true,
      "internalPort": 8800,
      "entrypoint": [
        "uv",
        "run",
        "--project",
        "/app",
        "spotdl",
        "web",
        "--host",
        "0.0.0.0",
        "--web-use-output-dir",
        "--config"
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/spotdl",
          "containerPath": "/root/.spotdl"
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media/data/music",
          "containerPath": "/music"
        }
      ]
    }
  ]
}