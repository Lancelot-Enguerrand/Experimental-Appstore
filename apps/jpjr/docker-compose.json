{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "jpjr",
      "image": "ghcr.io/lfpoulain/jpjr:2025-06-25",
      "isMain": true,
      "internalPort": "5001",
      "environment": [
          { "key": "SECRET_KEY", "value": "${JPJR_SECRET_KEY}" },
          { "key": "OPENAI_API_KEY", "value": "${JPJR_OPENAI_API_KEY}" },
          { "key": "USE_SSL", "value": "false" },
          { "key": "DB_TYPE", "value": "postgresql" },
          { "key": "DB_HOST", "value": "jpjr-db" },
          { "key": "DB_NAME", "value": "jpjrdb" },
          { "key": "DB_USER", "value": "admin" },
          { "key": "DB_PASSWORD", "value": "${JPJR_DB_PASSWORD}" },
          { "key": "DB_PORT", "value": "5432" }
      ],
      "dependsOn": [
        "jpjr-db"
      ]
    },
    {
      "name": "jpjr-db",
      "image": "postgres:17-alpine",
      "environment": [
          { "key": "POSTGRES_PASSWORD", "value": "${JPJR_DB_PASSWORD}" },
          { "key": "POSTGRES_USER", "value": "admin" },
          { "key": "POSTGRES_DB", "value": "jpjrdb" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -h localhost -U admin -d jpjrdb",
        "interval": "30s",
        "timeout": "5s",
        "retries": 10
      }
    }
  ]
}
