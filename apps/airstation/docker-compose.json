{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "airstation",
      "image": "cheatsnake/airstation:1.3.0",
      "isMain": true,
      "internalPort": 7331,
      "environment": [
          { "key": "AIRSTATION_SECRET_KEY", "value": "${AIRSTATION_SECRET_KEY}" },
          { "key": "AIRSTATION_JWT_SIGN", "value": "${AIRSTATION_JWT_SIGN}" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/storage",
          "containerPath": "/app/storage"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/static",
          "containerPath": "/app/static"
        }
      ],
      "healthCheck": {
        "test": "wget --spider -q http://localhost:7331/",
        "interval": "10s",
        "timeout": "5s",
        "retries": 3,
        "start_period": "10s"
      }
    }
  ]
}
