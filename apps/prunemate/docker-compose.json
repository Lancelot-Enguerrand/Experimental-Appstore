{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "prunemate",
      "image": "anoniemerd/prunemate:latest",
      "isMain": true,
      "internalPort": 8080,
      "environment": [
          { "key": "PRUNEMATE_TZ", "value": "${TZ}" },
          { "key": "PRUNEMATE_TIME_24H", "value": "${PRUNEMATE_TIME_24H}" },
          { "key": "PRUNEMATE_CONFIG", "value": "/config/config.json" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/logs",
          "containerPath": "/var/log"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        },
        {
          "hostPath": "/var/run/docker.sock",
          "containerPath": "/var/run/docker.sock"
        }
      ]
    }
  ]
}
